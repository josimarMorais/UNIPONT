<div class="sessao-adm">

    <h2>EDITAR CURSO</h2>
    <form action="/admin/curso/editar" class="main-form" method="POST">
    <fieldset>
        <legend>Novo Curso</legend>
        <input type="hidden" name="id" value="{{curso.id}}">
        <div class="form-group">
            <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome"  value="{{curso.nome}}" required>
        </div>
        <div class="form-group">
            <label for="periodos">Periodos: </label>
            <input type="number" id="periodos" name="periodos" value="{{curso.periodos}}" required>
        </div>
        <div class="button">
            <input type="submit" value="Editar">
        </div>
    </fieldset>
</form>
</div>