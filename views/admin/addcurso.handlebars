<div class="sessao-adm">

    <h2>NOVO CURSO</h2>
    <form action="/admin/curso/adicionar" class="main-form" method="POST">
    <fieldset>
        <legend>Novo Curso</legend>
        <div class="form-group">
            <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" required>
        </div>
        <div class="form-group">
            <label for="periodos">Periodos: </label>
            <input type="number" id="periodos" name="periodos" required>
        </div>
        <div class="button">
            <input type="submit" value="Enviar">
        </div>
    </fieldset>
</form>
</div>